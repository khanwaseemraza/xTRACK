{
  "name": "ui-vision-cdp-yolo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:server dev:ui",
    "dev:server": "npm --workspace apps/server run dev",
    "dev:ui": "npm --workspace apps/ui run dev",
    "build": "npm-run-all build:ui build:server",
    "build:ui": "npm --workspace apps/ui run build",
    "build:server": "npm --workspace apps/server run build",
    "start": "npm --workspace apps/server run start"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}